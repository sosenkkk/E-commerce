<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="form_container">
                
                
                <form class="login-form" action="/login" method="POST" novalidate>
                    <% if(errorMessage){ %>
                        <div class="user-message user-message--error"><%= errorMessage %></div>
                        <% } %>
                    <div class="text">Login</div>
                    <div class="form-control">
                        <label for="email">E-mail</label>
                        <input class="<%= validationErrors.find(e=> e.param === 'email')? 'invalid': '' %>"
                        type="email" name="email" id="email" value="<%=oldInput.email %>">
                    </div>
                    <div class="form-control">
                        <label for="password">Password</label>
                        <input class="<%= validationErrors.find(e=> e.param === 'password')? 'invalid': '' %>"
                         type="password" name="password" id="password" value="<%=oldInput.password %>" >
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    
                    <button class="button" type="submit">
                        Login
                    </button>
                    <div class="forgot-pass">
                        <a href="/reset" >Reset Password</a>
                    </div>
                    <div class="sign-up">
                        Not a member?
                        <a href="/signup">signup now</a>
                     </div>
                </form>
                
            </main>
            <%- include('../includes/end.ejs') %>